<h1>Events in {{model.name}}</h1>

<div class="grid-items">
  <div {{action 'filterEvents' 'all'}}>All</div>
  <div {{action 'filterEvents' 'isToday'}}>Today</div>
  <div {{action 'filterEvents' 'isTomorrow'}}>TOmorrow </div>
  <div {{action 'filterEvents' 'isWeekend'}}>Weekend </div>
  <div {{action 'filterEvents' 'featured'}}>Featured </div>
  <div {{action 'filterEvents' 'isFree'}}>Free </div>
</div>

<div class="grid-items" id="event-cards">
  {{#liquid-bind filteredEvents as |events|}}
    {{#each events as |event|}}
      {{event-card city=model event=event}}
    {{else}}
      <center>There are no events for this date</center>
    {{/each}}
  {{/liquid-bind}}
</div>

{{outlet}}
